		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"vitest-browser-svelte": "^2.0.2"
	},
	"dependencies": {
		"better-sqlite3": "^12.6.2",
		"echarts": "^5.6.0",
		"svelte-echarts": "^1.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"better-sqlite3"
		]
